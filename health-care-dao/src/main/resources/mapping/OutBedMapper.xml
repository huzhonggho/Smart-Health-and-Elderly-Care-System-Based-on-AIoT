<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!--namespace = 所需实现的接口全限定名-->
<mapper namespace="com.boot.dandelion.health.care.dao.mapper.OutBedMapper">

    <resultMap id="BaseResultMap" type="com.boot.dandelion.health.care.dao.entity.Outbed">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="mattressId" jdbcType="VARCHAR" property="mattressId"/>
        <result column="start" jdbcType="VARCHAR" property="start"/>
        <result column="ende" jdbcType="VARCHAR" property="ende"/>
    </resultMap>

    <sql id="BaseColumnList">
        id,mattressId,start,ende
    </sql>

    <insert id="insert" parameterType="com.boot.dandelion.health.care.dao.entity.Outbed" useGeneratedKeys="true" keyProperty="id">
        insert into OutBed (id, mattressId, start, ende)
        values (#{id,jdbcType=INTEGER}, #{mattressId,jdbcType=VARCHAR},
                #{start,jdbcType=VARCHAR}, #{ende,jdbcType=VARCHAR})
    </insert>
    <select id="selectByPageAndSearch" resultType="com.boot.dandelion.health.care.dao.entity.Outbed">
        SELECT <include refid="BaseColumnList"/>
        FROM OutBed
        WHERE start >= STR_TO_DATE('startDate', 'YYYY-MM-DD HH24:MI:SS')
        and ende &lt;= STR_TO_DATE('endDate', 'YYYY-MM-DD HH24:MI:SS') and
        mattressId = #{mattressId, jdbcType=VARCHAR}
        ORDER BY id
        LIMIT #{pageSize} OFFSET #{offset}
    </select>

</mapper>